<div class="container mt-5">
  <h1 class="text-center">Liste des utilisateurs</h1>

  <table class="table text-center mt-5">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Pr√©nom</th>
        <th scope="col">Nom</th>
        <th scope="col">Email</th>
        <th scope="col">Edition</th>
        <th scope="col">Suppression</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <th scope="row"><%= user.id %></th>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.email %></td>
          <td><%= link_to "Editer", edit_admin_user_path(user.id), class: "btn btn-primary" %></td>
          <td><%= link_to "Supprimer", admin_user_path(user.id), method: :delete, class: "btn btn-danger" %></td>
        </tr>
      <%end%>
    </tbody>
  </table>
</div>