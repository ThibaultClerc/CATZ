<div class="container mt-5">

  <h1 class="text-center mb-5">Modification d'un produit</h1>

  <%= form_for(@item, url: admin_item_path(@item.id)) do |f| %>

    <div class="field form-group">
      <%= f.label :title, "Titre :" %><br>
      <%= f.text_field :title, autofocus: true, autocomplete: "title", class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :description, "Description :" %><br>
      <%= f.text_area :description, autocomplete: "description", class: "form-control" %>
    </div>
    
    <div class="field form-group">
      <%= f.label :price, "Prix :" %><br>
      <%= f.text_field :price, autocomplete: "price", class: "form-control" %>
    </div>

    <div class="actions text-right">
      <%= f.submit "Mettre Ã  jour", class: "btn btn-primary" %>
    </div>

  <%end%>

</div>