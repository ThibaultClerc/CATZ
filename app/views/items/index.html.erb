<div class="jumbotron cat-hero-index-image text-white" style="height: 700px;">
  <div class="container text-center">
    <h1 class="display-2">Catz Temple</h1>
    <h1 class="lead">Pour l'amour des chats</h1>
    <br>
    <p class="">Le premier magasin de photos de chats au monde</p>
    <p class="lead"></p>
  </div>
</div>

<div class="container">
  <div class="card-group">
    <% @items.each do |item|%>
      <div class="col-md-4 mt-2 mt-sm-0 card-container mb-3 tex">
        <div class="card text-center product p-4 pt-5 border-0 h-100 rounded-0 cat-card-index shadow">
          <a href="/items/<%=item.id%>"><img class="img-fluid d-block mx-auto" src="<%= item.image_url %>" alt="Pilot Aviator Glasses Gear Image"></a>
          <div class="card-body p-4 py-0 h-xs-440p">
            <h5 class="card-title font-weight-semi-bold mb-3 w-xl-220p mx-auto"><%= link_to item.title, item_path(item.id), style: "text-decoration: none !important;"%></h5>
            <h6><%= item.price %> â‚¬</h6>
          </div>
          <p class="btn w-100 px-4 mx-auto">
          <% if current_user.present? %>
          <%= link_to "Acheter", cart_path(current_user.id, :item_id => item.id), method: :put, class: "btn btn-dark btn-lg w-100" %>
        <% else %>
          <%= link_to "Acheter", new_user_registration_path, class: "btn btn-dark btn-lg w-100" %>
        <% end %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>